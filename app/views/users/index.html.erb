<% content_for :head do %>
  <%= stylesheet_link_tag "views/bootstrap.min" %>
  <%= stylesheet_link_tag "views/dashboard/icon.css" %>
  <%= stylesheet_link_tag "views/dashboard/metisMenu.min.css" %>
  <%= stylesheet_link_tag "views/dashboard/morris.css" %>
  <%= stylesheet_link_tag "views/dashboard/style.css" %>
<% end %>

<div id="page-wrapper">

  <!-- Top Bar Start -->
  <%= render :partial => 'shared/topbar' %>
  <!-- Page content start -->
  <div class="page-contentbar">

    <!--left navigation start-->
    <%= render :partial => 'shared/sidebar' %>
    <%= render :partial => 'shared/add_user' %>
    <!--left navigation end-->

    <!-- START PAGE CONTENT -->
    <div id="page-right-content">
    <div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h4 class="header-title">Your Users</h4>
            <div class="row">
                <div class="col-lg-12">
                  <div class="alert alert-icon alert-success alert-dismissible fade in hidden congrats-on-save" role="alert">
                    <i class="mdi mdi-check-all"></i>
                    <strong>Well done!</strong> User has been added.
                  </div>
                    <div class="m-b-20">
                        <h5><button class="btn btn-primary btn-bordered" id="add-user">Add User</button></h5>
                        <table id="users_datatables" class="table table-striped m-0">
                            <thead>
                                <tr role="row" class="heading">
                                    <th name="order_id" class="sorting">#</th>
                                    <th name="order_fullname" class="sorting">Fullname</th>
                                    <th name="order_username" class="sorting">Username</th>
                                    <th name="order_email" class="sorting">Email</th>
                                    <th name="order_company" class="sorting">Company</th>
                                    <th name="order_created_at" class="sorting">Created At</th>
                                    <th name="" class="sorting"></th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @users.each do |user| %>
                                <tr>
                                  <th scope='row'><%= user.id %></th>
                                  <td><%= user.fullname %></td>
                                  <td><%= user.username %></td>
                                  <td><%= user.email %></td>
                                  <td><%= user.company.company_name %></td>
                                  <td><%= user.created %></td>
                                  <td><i user-id='<%= user.id %>' class='fa fa-trash-o delete-user'></i></td>
                                </tr>
                              <% end -%>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--- end row -->
        </div> <!-- end col -->
    </div> <!-- end row -->
  </div>
      <!-- end container -->

      <%= render :partial => 'shared/footer' %>
      <!-- end footer -->

    </div>
    <!-- End #page-right-content -->

  </div>
  <!-- end .page-contentbar -->
</div>

<script>
  $(document).ready(function () {
    window.initializeUser();
  });
</script>